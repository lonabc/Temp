<Window x:Class="WpfAppLogin.UserPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppLogin"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="UserPage" Height="650" Width="1000">

    <Window.Resources>
        <Style TargetType="Button" x:Key="TestButton">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style TargetType="Menu" x:Key="MyMenu" BasedOn="{StaticResource MenuBaseStyle}">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <!-- 阴影效果 -->
        <DropShadowEffect x:Key="DefaultCardShadow" 
                     Color="#ADB5BD"
                     Direction="320"
                     ShadowDepth="5"
                     Opacity="0.5"
                     BlurRadius="10"/>
        <DropShadowEffect x:Key="HoverCardShadow" 
                     Color="#FF2563EB"
                     Direction="320"
                     ShadowDepth="7"
                     Opacity="0.7"
                     BlurRadius="15"/>

        <!-- 卡片样式 -->
        <Style TargetType="Image" x:Key="CardStyle">
            <Setter Property="Effect" Value="{StaticResource DefaultCardShadow}"/>
            <Setter Property="Opacity" Value="0.9"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect" Value="{StaticResource HoverCardShadow}"/>
                    <Setter Property="Opacity" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    <Grid Background="#EFF2F9">
        <Grid  ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" ShowGridLines="True" Width="200" Background="#FFFFFF">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <hc:Gravatar Style="{StaticResource GravatarCircleImg}"  HorizontalAlignment="Right" Margin="0,0,15,0" >
                        <Image Source="/Recesource/images/backgroundHome.jpg"  Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" Width="72"/>
                    </hc:Gravatar>
                    <Grid Grid.Column="1" Height="100">
                        <TextBlock HorizontalAlignment="Left"  Text="雪球虫" FontSize="20"  Margin="0,29,0,0" Style="{StaticResource TextBlockLargeBold}" VerticalAlignment="Top"/>
                        <TextBlock HorizontalAlignment="Left"  Text="代码即人生,享受创造的过程"  TextWrapping="Wrap" MaxWidth="140" Style="{StaticResource TextBlockDefaultSecLight}" Margin="0,40,0,0" />
                    </Grid>
                </Grid>
                <Grid Grid.Row="1" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <!-- 内容区域（自适应剩余空间） -->
                        <RowDefinition Height="Auto"/>
                        <!-- 图片区域（固定高度） -->
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <TextBlock Text="常用功能" FontSize="12" HorizontalAlignment="Center" Margin="10" Style="{StaticResource TextBlockDefaultSecLight}" VerticalAlignment="Top"/>
                        <Menu ItemsSource="{Binding Menus}" Background="#FFFFFF">
                            <Menu.ItemContainerStyle>
                                <Style TargetType="MenuItem">
                                    <Setter Property="Command" Value="{Binding Command}" />
                                    <Setter Property="Header" Value="{Binding Header}" />
                                    <Setter Property="Height" Value="50"/>
                                    <Setter Property="Margin" Value="0,10,0,0"/>
                                    <!-- 默认背景颜色 -->
                                    <Setter Property="Background" Value="Transparent" />
                                    <!-- 鼠标悬停时的背景颜色 -->
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="MenuItem">
                                                <Border x:Name="Border" Background="{TemplateBinding Background}">
                                                    <ContentPresenter ContentSource="Header" 
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  Margin="10,2"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <!-- 鼠标悬停时的样式 -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#FFE0E0E0" />
                                                    </Trigger>
                                                    <!-- 选中时的样式 -->
                                                    <Trigger Property="IsHighlighted" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#FFB0B0B0" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Menu.ItemContainerStyle>
                            <Menu.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </Menu.ItemsPanel>
                        </Menu>

                    </StackPanel>
                    <!-- 图片固定在底部 -->
                    <Image Grid.Row="1" 
               Source="/Recesource/UserPageIcon.png" 
               Stretch="UniformToFill" 
               Margin="10"/>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Recesource/images/LeftArrow.png" Stretch="UniformToFill" Width="20" />
                        <Image Source="/Recesource/images/rightArrow.png" Stretch="UniformToFill" Width="20"/>

                    </StackPanel>
                    <Button Style="{StaticResource ButtonInfo}" Content="返回首页" HorizontalAlignment="Right" Background="#6A74C9" Margin="0,2,10,0" Width="100"/>

                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel>
                        <TextBlock FontSize="20" Style="{StaticResource TextBlockLargeBold}" HorizontalAlignment="left" VerticalAlignment="Top" Margin="5">最近使用</TextBlock>
                        <Grid>
                            <Canvas Width="155" Height="140" Margin="40,0,0,0" HorizontalAlignment="Left">
                                <Image  Style="{StaticResource CardStyle}"  Source="/Recesource/images/card.png"  Stretch="UniformToFill"  Width="155"  Height="140"  />
                                
                                <TextBlock  Text="Hello, WPF!"  Foreground="White"  FontSize="16" FontWeight="Bold" Canvas.Left="0" Canvas.Top="0"  Width="155" Height="140" HorizontalAlignment="Center"  VerticalAlignment="Center" />
                                <Button  Content="Click Me"  Width="80"    Height="30"  Canvas.Left="37.5"    Canvas.Top="95"  Background="#FF2563EB"  Foreground="White" />
                            </Canvas>

                            <Image Source="/Recesource/images/card.png" Stretch="UniformToFill" Width="155" Margin="10" Height="140" HorizontalAlignment="Center"/>
                            <Image Source="/Recesource/images/card.png" Stretch="UniformToFill" Width="155" Margin="0,0,40,0" Height="140" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            
            </Grid>
            <Grid Grid.Column="2">
                <hc:SearchBar Name="SearchBarCustomVerify"  Style="{StaticResource SearchBarPlus}"  Width="150" Height="20" VerticalAlignment="Top"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
