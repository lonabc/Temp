<Window x:Class="WpfAppLogin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppLogin"

        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="850">
    <Window.Resources>
        <Style x:Key="Text" TargetType="TextBlock">
            <Setter Property="Margin" Value="5,12,2,2"/>
        </Style>
    </Window.Resources>
    <Grid >
        <Grid.RowDefinitions >
            <RowDefinition Height="1*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="BurlyWood">
            <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" Text="智能家居管理系统"  VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1"  Width="300" Margin="250,51,250,172" HorizontalAlignment="Center" >

            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="Black" BorderThickness="2,2,2,0"   Grid.Row="0">
                <Grid Grid.Row="0" Background="Cyan" Width="Auto">
                    <TextBlock  HorizontalAlignment="Center"  TextWrapping="Wrap" Text="登入"  VerticalAlignment="Center" />
                </Grid>
            </Border>

            <Border BorderBrush="Black" BorderThickness="2,0,2,0"    Grid.Row="1">
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel HorizontalAlignment="Right" Width="auto">
                        <TextBlock Style="{StaticResource Text}" Margin="5,10,2,2" Text="用户名"/>
                        <TextBlock Style="{StaticResource Text}" Text="密码"/>

                    </StackPanel>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Left" Width="150">
                        <TextBox x:Name="txtUserName" Text="{Binding name}" Width="150" Margin="0,2,0,2"/>
                        <TextBox x:Name="txtUserPassword" Text="{Binding password}" Width="150" Margin="0,2,0,2"/>
                    </StackPanel>

                </Grid>
            </Border>
            <Border BorderBrush="Black" BorderThickness="2,0,2,2"  CornerRadius="0"  Grid.Row="2">
                <Grid >
                    <StackPanel>
                        <CheckBox Content="记住密码" HorizontalAlignment="Left" Margin="61,10,0,0" VerticalAlignment="Top"/>
                        <Button Click="BtnLogin_Click" x:Name="btnLogin" Content="登录" HorizontalAlignment="Left" Margin="61,10,0,0" VerticalAlignment="Top" Width="200"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Window>
