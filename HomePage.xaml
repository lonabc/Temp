<Window x:Class="WpfAppLogin.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppLogin"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="HomePage" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="Text" TargetType="TextBlock">
            <Setter Property="Margin" Value="5,12,2,2"/>
        </Style>
    </Window.Resources>
    <Grid >
       
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <DrawingBrush>
                <DrawingBrush.Drawing>
                    <DrawingGroup>
                     <!-- 设置背景图片 -->
                        <ImageDrawing ImageSource="/Recesource/images/backgroundHome.jpg" Rect="0.6,0,0.5,1"/>
                    </DrawingGroup>
                </DrawingBrush.Drawing>
            </DrawingBrush>
        </Grid.Background>
        
        <Grid>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36"  Foreground="White" Text="智能家居管理系统" />
        </Grid>
        
        
        <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,0" Grid.Row="1">
            <hc:LoadingLine Width="120" Height="10"  Margin="0,0,0,30" />
            <TextBlock  x:Name="loadingText" Text="系统加载中" Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
